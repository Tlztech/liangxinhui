.contain {
  width: 720rpx;
  margin: 0 auto;
  color: #999;
  font-size: 30rpx;
}
input {
  width: 100%;
  height: 100%;
}
.list {
  width: 100%;
  font-size: 32rpx;
}
.list .item {
  width: 360rpx;
}
.list .name {
  height: 80rpx;
  line-height: 80rpx;
  color: #444;
}
.list .content {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
}
.list .user {
  width: 150rpx;
  height: 150rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.list .user .photo {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.middle {
  width: 100%;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.middle .name {
  width: 80rpx;
  color: #444;
}
.middle .content {
  width: 590rpx;
}

/* 图片上传 */
.images {
  width: 100%;
  border-top: 4rpx solid #eee;
  border-bottom: 4rpx solid #eee;
  color: #ccc;
}
.images .item{
  width: 150rpx;
  margin-top: 35rpx;
  margin-bottom: 35rpx;
  height: 150rpx;
}
.images .item2{
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 60rpx;
  border: 4rpx solid #ccc;
  margin:  60rpx 0 60rpx 40rpx;
}
.images .title{
  width: 100%;
  text-align: center;
}

/* 详情 */
.textline{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #444;
}
.text{
  width: 100%;
  height: 700rpx;
  border-bottom: 2rpx solid #ccc;
}
.text .textarea{
  width: 100%;
  height: 100%;
}