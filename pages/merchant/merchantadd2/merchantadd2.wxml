<view class="all">
  <view class="list" style="border-top: 6rpx solid #ccc;">
    <view class="item"><input class="input" placeholder="品牌"></input></view>
  </view>
  <view class="list flex-row">
    <view class="item3"><input class="input" placeholder="原价"></input></view>
    <view class="item3 border"><input class="input" placeholder="活动价"></input></view>
    <view class="item3 border"><input class="input" placeholder="返利"></input></view>
  </view>
  
  <view class="list">
    <view class="item"><input class="input" placeholder="套餐内容"></input></view>
  </view>
  <view class="list">
    <view class="item flex-row">
      <view class="name">有效期</view>
      <picker mode="date" value="{{date}}" bindchange="bindDateChange">
        <view class="time">{{date}}</view>
      </picker>
      <view class="name">至</view>
      <picker mode="date" value="{{date2}}" bindchange="bindDateChange2">
        <view class="time">{{date2}}</view>
      </picker>
    </view>
  </view>
  <view class="list">
    <view class="item"><input class="input" placeholder="地址"></input></view>
  </view>
  <view class="list">
    <view class="item"><input class="input" placeholder="电话"></input></view>
  </view>
  
  <view class="textlist">
    <view class="top">商品说明</view>
    <view class="bottom l5"><textarea class="input"></textarea></view>
  </view>
  <view class="textlist">
    <view class="top">上传图片（最多4张）</view>
    <view class="bottom l3">
      <view class="itemplus">＋</view>
    </view>
  </view>
  <view class="addbot" bindtap="submit">提交美食推广</view>
</view>